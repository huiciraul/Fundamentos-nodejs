<%- include('./templates/cabecera.ejs', {tituloWeb: 'HOME pagina de inicio'}) %>
   
<div class="container">
        <div class="d-grid gap-2">
          <a 
            class="btn btn-success"
            href="/Conductores/crear" 
            >
            Agregar nuevo conductor
          </a>
        </div>
             <table class="table">
                <thead>
                  <tr>
                    <th scope="col">id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Destino</th>
                    <th scope="col">Origen</th>
                    <th scope="col">Contactar</th>
                  </tr>
                </thead>
                <tbody>
                    <% if (arrayConductores.length > 0) {%>
                        <% arrayConductores.forEach(conductor => { %>
                            <tr>
                                <th scope="row"><%= conductor.id %></th>
                                <th scope="row"><%= conductor.nombre %></th>
                                <th scope="row"><%= conductor.destino %></th>
                                <th scope="row"><%= conductor.origen %></th>
                            </tr>
                         <%})%>
                    <% } %>
                </tbody>
              </table>
</div>

